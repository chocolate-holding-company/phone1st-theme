<div class="theme-variables">
 <p>The default colors - see <em>css/base/_variables.scss</em> to change</p>
 <div class="first-color">
  <p>$first-color</p>
 </div>
 <div class="second-color">
  <p>$second-color</p>
 </div>
 <div class="black-color">
  <p>$black</p>
 </div>
 <div class="white-color">
  <p>$white</p>
 </div>
 <div class="dark-gray">
  <p>$dark-gray</p>
 </div>
 <div class="medium-gray">
  <p>$medium-gray</p>
 </div>
 <div class="light-gray">
  <p>$light-gray</p>
 </div>
 <div class="font-color">
  <p>$font-color</p>
 </div>
 <div class="link-color">
  <p>$link-color</p>
 </div>
 <div class="hover-color">
  <p>$hover-color</p>
 </div>
 <div class="background">
  <p>$background color</p>
 </div>
 <div class="light-background">
  <p>$light background color</p>
 </div>
 <div class="border">
  <p>$border and $radius</p>
 </div>
 <div class="error-color">
  <p>$error-color</p>
 </div>
 <div class="alert-color">
  <p>$alert-color</p>
 </div>
 <div class="success-color">
  <p>$success-color</p>
 </div>
</div>

<div class="margin-spacer">
 <div class="normal-margin">
  <p>margin-left: $spacer;<br>
  padding: $spacer; - 2rem</p>
 </div>
 <div class="medium-margin">
  <p>margin-left: $medium-spacer;<br>
  padding: $medium-spacer; - 1rem</p>
 </div>
 <div class="small-margin">
  <p>margin-left: $small-spacer;<br>
  padding: $small-spacer; - 0.5rem</p>
 </div>
 <div class="large-margin">
  <p>margin-left: $large-spacer;<br>
  padding: $large-spacer; - 3rem</p>
 </div>
 <div class="big-margin">
  <p>margin-left: $big-spacer;<br>
  padding: $big-spacer; - 4rem</p>
 </div>
</div>
