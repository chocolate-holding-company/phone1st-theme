<h3 id="ellipsis" class="mb-m">ellipsis</h3>
<pre class="mt-m mb"><code class="language-scss">.ellipsis {
@include size(300px, 80px);
@include center;
font-size: 1.1rem;
padding: 10px;
border: 1px solid blue;
 &:hover span {
  @include ellipsis;//mixin
 }
}

@mixin ellipsis($width: 100%, $display: inline-block) {
 display: $display;
 max-width: $width;
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
 word-wrap: normal;
}</code></pre>

<div class="ellipsis">
 <span>Hover over me to see the ellipsis in action</span>
</div>
