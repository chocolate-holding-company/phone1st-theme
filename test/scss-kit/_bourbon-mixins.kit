<h3 id="triangle" class="heading-7 mb-m">triangle</h3>
<pre class="mt-m mb"><code class="language-scss">.element {
@include size(300px, 50px);
@include center;
background-color: #b25c9c;
position: relative;

 &::before {
  @include triangle(up, 2rem, 1rem, #b25c9c);//mixin
  position: absolute;
  content: "";
  //position triangle on box
  top:-1rem;
  left:6rem;
 }
}</code></pre>

<div class="triangle my-l"></div>
<hr />
